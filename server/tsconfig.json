{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@goldfoxtypes/*": ["types/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@catchAsync": ["src/errors/catchAsync"]
    },
    "types": ["mocha", "chai"]
  },
  "include": ["src/**/*", "test/**/*", "types/**/*"]
}
